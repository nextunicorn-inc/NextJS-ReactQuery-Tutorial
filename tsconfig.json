{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "es6",
    "lib": ["ES5", "ES6", "ESNext", "DOM"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "infinite-scroll": [
        "./apps/01-infinite-scroll"
      ],
      "infinite-scroll/*": [
        "./apps/01-infinite-scroll/*"
      ],
      "follow-sync": [
        "./apps/02-follow-sync"
      ],
      "follow-sync/*": [
        "./apps/02-follow-sync/*"
      ],
      "vac-tutorial": [
        "./apps/03-vac-tutorial"
      ],
      "vac-tutorial/*": [
        "./apps/03-vac-tutorial/*"
      ]
    }
  },
  "references": [
    {
      "path": "apps/01-infinite-scroll"
    },
    {
      "path": "apps/02-follow-sync"
    },
    {
      "path": "apps/03-vac-tutorial"
    }
  ],
  "include": [],
  "exclude": [
    "node_modules"
  ]
}
